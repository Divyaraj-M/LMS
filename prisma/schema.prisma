generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Project {
  ProjectCode             String    @id
  NameOfTheCollege        String
  CollegeCode            String
  Year                    String
  CourseStream            String
  DomainOfTraining       String
  TypeOfProject           String
  AcademicYear           String
  Sales                   String
  MOUSignedDate          DateTime
  TrainingStartDate      DateTime
  TrainingEndDate        DateTime
  NoOfStudents            Int
  CostPerStudent         Float
  TotalContractValue     Float
  TotalContractValueInclGST Float
  HrsPerBatch            Int
  TypeOfPayment          String
  PaymentPercentage      Float
  NoOfInvoices           Int
  Invoices               Invoice[]
  Batches                Batch[]
  TrainerAssignments     TrainerAssignment[]
  TrainerInvoiceData     TrainerInvoiceData[]
  Students               Student[]
}

model Admin {
  adminId String @id
  username String
  org String
  email String
  password String
}

model Student {
  StudentID    String  @id
  StudentName  String
  Email        String
  Contact      String
  Dept         String
  ProjectCode  String
  BatchID      String
  TrainingHours Float
  Project      Project @relation(fields: [ProjectCode], references: [ProjectCode])
  Batch        Batch   @relation(fields: [BatchID], references: [BatchID])
}

model Batch {
  BatchID       String   @id
  ProjectCode   String
  BatchName     String
  NoOfStudents  Int
  TotalBatchHours Float
  StartDate     DateTime
  EndDate       DateTime
  Project       Project @relation(fields: [ProjectCode], references: [ProjectCode])
  Students      Student[]
  Schedules     BatchSchedule[]
}

model BatchSchedule {
  ScheduleID    String  @id
  BatchID       String
  TrainerID     String
  Date          DateTime
  StartTime     DateTime
  EndTime       DateTime
  TotalHours    Float
  Topics        String
  Batch         Batch   @relation(fields: [BatchID], references: [BatchID])
  Trainer       Trainer @relation(fields: [TrainerID], references: [TrainerID])
}

model Trainer {
  TrainerID           String  @id
  TrainerName         String
  Contact             String
  Email               String
  Specialization      String
  NameOfAccountHolder String
  BankName            String
  AccountNo           String
  IFSCCode            String
  PANCard             String
  BankBranchAddress   String
  AadharCard          String
  YearsOfExperience   Int
  Schedules           BatchSchedule[]
  TrainerAssignments  TrainerAssignment[]
  TrainerInvoiceData  TrainerInvoiceData[]
}

model TrainerAssignment {
  TrainerAssignmentID String   @id
  TrainerID           String
  ProjectCode         String
  ScheduleID          String
  Trainer             Trainer @relation(fields: [TrainerID], references: [TrainerID])
  Project             Project @relation(fields: [ProjectCode], references: [ProjectCode])
  Schedule           BatchSchedule @relation(fields: [ScheduleID], references: [ScheduleID])
}

model Invoice {
  SNo                  Int     @id @default(autoincrement())
  ProjectCode          String
  InvoiceNo            String
  PaymentType          String
  TotalContractValue   Float
  PaymentPercentage    Float
  AmountFromMOU        Float
  AmountRaised         Float
  DateRaised           DateTime
  InvoiceCode          String
  InvoiceType          String
  Status               String
  Remarks              String
  GAInvoiceCode       String
  Project              Project @relation(fields: [ProjectCode], references: [ProjectCode])
}

model TrainerInvoiceData {
  InvoiceID            String   @id
  Date                 DateTime
  BillNo              String
  ProjectCode         String
  TrainerAssignmentID String
  TrainerID           String
  TrainerName         String
  Topic               String
  Domain              String
  FromDate            DateTime
  ToDate              DateTime
  NoOfHours           Int
  NoOfStudents        Int
  NoOfSessions        Int
  NoOfDays            Int
  ChargesPerHour      Float
  Conveyance          Float
  FoodAllowance       Float
  Lodging             Float
  TotalTrainingCharges Float
  TotalReimbursements Float
  TDSDeduction        Float
  Total               Float
  AdhocAdditionDeduction Float
  NetPayment          Float
  Project             Project @relation(fields: [ProjectCode], references: [ProjectCode])
  Trainer             Trainer @relation(fields: [TrainerID], references: [TrainerID])
  TrainerAssignment   TrainerAssignment @relation(fields: [TrainerAssignmentID], references: [TrainerAssignmentID])
}
